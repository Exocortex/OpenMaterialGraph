glass:
   reflectance: color
   transmittance: color
   uRoughness: float
   vRoughness: float
   ior: float
   normal: normal


var isSpecular = ( uRoughness === 0 && vRoughness === 0 );
// TODO: what is TransportMode mode?
//if( isSpecular )
//	bsdf.add( new FresnelSpecular( reflectance, transmission, 1, ior, mode );
//else

var microfacetDistribution = null;
if( ! isSpecular )
 	microfacetDistribution = new TrowbridgeReitzDistribution( uRoughness, vRoughness );

if( reflectance !== BLACK )
	var fresnel = new FresnelDielectric( 1, ior );
	if( isSpecular )
		bsdf.add( new SpecularReflection( reflectance, fresnel ) );
	else
	 	bsdf.add( new MicrofacetReflection( reflectance, microfacetDistribution, fresnel ) )

if( transmittance !== BLACK )
	var fresnel = new FresnelDielectric( 1, ior );
	if( isSpecular )
		bsdf.add( new SpecularTransmission( transmittance, 1, ior, mode ) );
	else
	 	bsdf.add( new MicrofacetTransmission( transmittance, microfacetDistribution, 1, ior ) )



