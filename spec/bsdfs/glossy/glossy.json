{
	
	"format": {

		"type": "omg-bsdf",
		"version": "0.0.1-alpha",

	},

	"meta": {

		"name": "glossy",
		"label": "Glossy",
		"version": "0.0.1-alpha",
		"description": "Gloss Layer, Dielectric Fresnel",
		"formatVersion": "0.0.1-alpha",
	
	},

	"inputs": [

		{
			"name": "reflectionColor",
			"label": "Glossy Reflection Color",
			"description": "The glossy/specular reflection color.",
			"type": "color",
			"defaultValue": [ 0.6 0.6, 0.6 ]
		},

		{
			"name": "transmissionColor",
			"label": "Transmission Color",
			"description": "The transmission color, what is transmitted through the specular surface.  Often the same as the reflection color.",
			"type": "color",
			"defaultValue": [ 0.6, 0.6, 0.6 ]
		},

		{
			"name": "roughnessModel",
			"label": "Model",
			"description": "Specifies the gloss shading model.",
			"type": "option",
			"options": [ 
				{
					"value": "blinnPhong",
					"label": "Blinn-Phong",
					"description": ""
				},
				{
					"value": "ward",
					"label": "Ward",
					"description": ""
				},
				{
					"value": "cookTorrance",
					"label": "Cook-Torrance",
					"description": ""
				},
				{
					"value": "microfacet",
					"label": "GGX Microfacet",
					"description": ""
				}
			],
			"defaultValue": "microfacet",

		},

		{
			"name": "roughness",
			"label": "Roughness",
			"description": "Controls the roughness of the gloss layer according to the model specified.",
			"type": "float",
			"defaultValue": 0.1,
			"minimumValue": 0.0,
			"maximumValue": 1.0
		},

		{
			"name": "ior",
			"label": "Index of Refraction",
			"description": "The dielectric index of refraction.",
			"type": "color",
			"defaultValue": [ 1.5, 1.5, 1.5 ],
			"minimumValue": [ 0.0, 0.0, 0.0 ],
			"maximumValue": [ 100.0, 100.0, 100.0 ]			
		},

		{
			"name": "anisotropy",
			"label": "Anisotropy",
			"description": "Varyies the highlight from circular to elliptical.",
			"type": "float",
			"defaultValue": 0.0,
			"minimumValue": -1.0,
			"maximumValue": 1.0
		},

		{
			"name": "anisotropyRotation",
			"label": "Anisotropy Rotation",
			"description": "Rotates the anisotropy highlight.",
			"type": "float",
			"defaultValue": 0.0,
			"minimumValue": 0.0,
			"maximumValue": 1.0
		},

		{
			"name": "anisotropyTangent",
			"label": "Tangent for anisotropy highlight",
			"description": "",
			"type": "vector",
			"defaultValue": [ 1.0, 0.0, 0.0 ]
		},

		{
			"name": "abbeNumber",
			"label": "Dispersion Abbe Number",
			"description": "Control the dispersion of light via the Abbe number.  A value of zero means no disperson.  Typical values are in the range of 20 (high dispersion) to 84 (low disperson.)",
			"type": "float",
			"defaultValue": 0.0,
			"minimumValue": 0.0,
			"maximumValue": 100.0
		},

		{
			"name": "normal",
			"label": "Normal",
			"description": "Surface normal modulator via bump or normal maps.",
			"type": "normal",
			"defaultValue": [ 0.0, 0.0, 0.0 ]
		}

	]

}
